@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Delete Category</h2>
                    <hr />
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="ms-2"></label>
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>
                <div class="row mt-3">
                    <div class="col-6 md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 md-3">
                        <button asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


